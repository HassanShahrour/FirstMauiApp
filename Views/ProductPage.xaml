<ContentPage
    x:Class="BMB.Views.ProductPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BMB.ViewModels"
    Title="Products"
    BackgroundColor="{DynamicResource PrimaryBackgroundColor}">

    <Grid>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <CollectionView ItemsSource="{Binding Products}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,15">
                                <Frame
                                    Padding="15"
                                    BackgroundColor="White"
                                    BorderColor="Transparent"
                                    CornerRadius="12"
                                    HasShadow="True">

                                    <Grid>
                                        <StackLayout Spacing="8">
                                            <Image
                                                Aspect="AspectFill"
                                                HeightRequest="160"
                                                Source="{Binding ImageUrl}" />

                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding Name}"
                                                TextColor="#2c3e50" />

                                            <Label
                                                FontSize="14"
                                                LineBreakMode="WordWrap"
                                                MaxLines="2"
                                                Text="{Binding Description}"
                                                TextColor="#7f8c8d" />

                                            <StackLayout Orientation="Horizontal" Spacing="20">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Price, StringFormat='${0:F2}'}"
                                                    TextColor="#27ae60" />

                                                <Label
                                                    FontSize="14"
                                                    Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                                    TextColor="#34495e" />
                                            </StackLayout>
                                        </StackLayout>

                                        <Button
                                            Margin="5"
                                            Padding="0"
                                            BackgroundColor="#e74c3c"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductViewModel}}, Path=DeleteProductCommand}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="16"
                                            FontSize="16"
                                            HeightRequest="32"
                                            HorizontalOptions="End"
                                            Text="×"
                                            TextColor="White"
                                            VerticalOptions="Start"
                                            WidthRequest="32" />
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <Frame
            x:Name="FabFrame"
            Margin="20"
            Padding="0"
            BackgroundColor="DodgerBlue"
            CornerRadius="30"
            HasShadow="True"
            HeightRequest="60"
            HorizontalOptions="End"
            VerticalOptions="End"
            WidthRequest="60">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFabTapped" />
            </Frame.GestureRecognizers>
            <Label
                FontSize="32"
                HorizontalOptions="Center"
                Text="+"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <Grid
            x:Name="PopupOverlay"
            BackgroundColor="#CC000000"
            IsVisible="False">
            <Frame
                Margin="30"
                Padding="25"
                BackgroundColor="White"
                CornerRadius="16"
                HasShadow="True"
                HorizontalOptions="Center"
                MaximumWidthRequest="400"
                VerticalOptions="Center">
                <ScrollView MaximumHeightRequest="500">
                    <StackLayout Spacing="20">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            HorizontalOptions="Center"
                            Text="Add New Product"
                            TextColor="#2c3e50" />

                        <Entry
                            x:Name="NameEntry"
                            Placeholder="Product Name"
                            PlaceholderColor="#95a5a6"
                            Text="{Binding Name}"
                            TextColor="#2c3e50" />

                        <Editor
                            x:Name="DescriptionEditor"
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            Placeholder="Product Description"
                            PlaceholderColor="#95a5a6"
                            Text="{Binding Description}"
                            TextColor="#2c3e50" />

                        <Entry
                            x:Name="PriceEntry"
                            Keyboard="Numeric"
                            Placeholder="Price ($)"
                            PlaceholderColor="#95a5a6"
                            Text="{Binding Price}"
                            TextColor="#2c3e50" />

                        <Entry
                            x:Name="QuantityEntry"
                            Keyboard="Numeric"
                            Placeholder="Quantity"
                            PlaceholderColor="#95a5a6"
                            Text="{Binding Quantity}"
                            TextColor="#2c3e50" />

                        <Frame
                            Padding="0"
                            BackgroundColor="#f8f9fa"
                            CornerRadius="8"
                            HasShadow="False">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="160"
                                Source="{Binding ImageUrl}" />
                        </Frame>

                        <Button
                            BackgroundColor="#3498db"
                            Clicked="OnPickImageClicked"
                            CornerRadius="8"
                            Text="Select Image"
                            TextColor="White" />

                        <StackLayout
                            HorizontalOptions="Center"
                            Orientation="Horizontal"
                            Spacing="15"
                            VerticalOptions="Center">

                            <Button
                                BackgroundColor="#95a5a6"
                                Clicked="OnCancelClicked"
                                CornerRadius="8"
                                Text="Cancel"
                                TextColor="White" />

                            <Button
                                BackgroundColor="#3498db"
                                Clicked="OnAddProductClicked"
                                Command="{Binding AddProductCommand}"
                                CornerRadius="8"
                                Text="Add Product"
                                TextColor="White" />
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </Frame>

        </Grid>
    </Grid>
</ContentPage>