<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BMB.Views.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:vm="clr-namespace:BMB.ViewModels"
    Title="Multi-Select Country Picker"
    x:DataType="vm:PickerViewModel"
    BackgroundColor="{DynamicResource PrimaryBackgroundColor}">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Margin="16,32" Spacing="25">

                <syncfusion:SfComboBox
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Countries}"
                    MaximumHeightRequest="200"
                    MinimumHeightRequest="50"
                    MultiSelectionDisplayMode="Token"
                    Placeholder="Select countries"
                    SelectedItems="{Binding SelectedCountries}"
                    SelectionMode="Multiple" />

            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout
            Grid.Row="1"
            Padding="16"
            Spacing="10">
            <Button
                BackgroundColor="#0057D9"
                Command="{Binding ResetCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Reset"
                TextColor="White" />

            <Button
                BackgroundColor="#0057D9"
                Command="{Binding ShowSelectedItemsCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Show Selected"
                TextColor="White" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
