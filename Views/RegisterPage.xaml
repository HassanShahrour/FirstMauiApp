<ContentPage
    x:Class="BMB.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:BMB.ViewModels"
    Title="Register"
    BackgroundColor="White">

    <Grid
        Padding="30"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <VerticalStackLayout
            Margin="10"
            Padding="30"
            HorizontalOptions="Center"
            Spacing="25"
            VerticalOptions="Center"
            WidthRequest="320">

            <Label
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="Create Account"
                TextColor="#333" />

            <Frame
                Padding="5"
                BackgroundColor="#f0f1f5"
                CornerRadius="8"
                HasShadow="False">
                <Entry
                    BackgroundColor="#f0f1f5"
                    ClearButtonVisibility="WhileEditing"
                    HeightRequest="50"
                    Placeholder="Full Name"
                    Text="{Binding FullName}"
                    TextColor="#222" />
            </Frame>

            <Frame
                Padding="5"
                BackgroundColor="#f0f1f5"
                CornerRadius="8"
                HasShadow="False">
                <Entry
                    BackgroundColor="#f0f1f5"
                    ClearButtonVisibility="WhileEditing"
                    HeightRequest="50"
                    Keyboard="Telephone"
                    Placeholder="Phone Number"
                    Text="{Binding PhoneNumber}"
                    TextColor="#222" />
            </Frame>

            <Frame
                Padding="5"
                BackgroundColor="#f0f1f5"
                CornerRadius="8"
                HasShadow="False">
                <Entry
                    BackgroundColor="#f0f1f5"
                    ClearButtonVisibility="WhileEditing"
                    HeightRequest="50"
                    Keyboard="Email"
                    Placeholder="Email"
                    Text="{Binding Email}"
                    TextColor="#222" />
            </Frame>

            <Frame
                Padding="5"
                BackgroundColor="#f0f1f5"
                CornerRadius="8"
                HasShadow="False">
                <Entry
                    BackgroundColor="#f0f1f5"
                    ClearButtonVisibility="WhileEditing"
                    HeightRequest="50"
                    IsPassword="True"
                    Placeholder="Password"
                    Text="{Binding Password}"
                    TextColor="#222" />
            </Frame>

            <Button
                BackgroundColor="#0057D9"
                Command="{Binding RegisterCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Register"
                TextColor="White" />

            <Label
                FontAttributes="Italic"
                HorizontalOptions="Center"
                Text="Already have an account? Login"
                TextColor="#0057D9">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
